<div class="flex justify-center bg-slate-800 min-h-screen items-center">
<div class="bg-slate-200 rounded-lg p-4 shadow-xl max-h-96 my-4">
<h2 class="text-xl my-2">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
  <button class="text-red-600 p-2 rounded-lg">
    <%= f.submit "Send me reset password instructions" %>
  </button>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
